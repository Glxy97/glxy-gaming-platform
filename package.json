{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx server.ts",
    "dev:node": "node server.ts",
    "dev:next": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "cross-env NODE_OPTIONS=\"--require ./polyfills.js\" next build",
    "start": "node server.ts",
    "lint": "next lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:security": "vitest run __tests__/security",
    "test:games": "vitest run __tests__/game-validators",
    "test:e2e": "playwright test e2e",
    "test:e2e:auth": "playwright test e2e/auth-flow.spec.ts",
    "test:e2e:multiplayer": "playwright test e2e/multiplayer-game.spec.ts",
    "test:e2e:admin": "playwright test e2e/admin-panel.spec.ts",
    "typecheck": "tsc --noEmit",
    "typecheck:server": "tsc --noEmit --project tsconfig.server.json",
    "seed": "tsx scripts/seed.ts",
    "seed:achievements": "tsx scripts/seed-achievements.ts",
    "seed:rooms": "tsx scripts/seed-rooms.ts",
    "verify": "bash scripts/verify_glxy.sh",
    "verify:web-adobe": "tsx scripts/verify-web-adobe.ts",
    "test:e2e:web-adobe": "playwright test e2e/tests/web-adobe",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "dev:full": "npm run dev",
    "build:full": "npm run typecheck && npm run lint && npm run test && npm run build",
    "test:full": "npm run test && npm run test:coverage && npm run e2e",
    "security:scan": "npm audit --audit-level high",
    "deploy:prod": "npm run build:full && docker-compose up -d --build",
    "db:migrate": "npx prisma migrate deploy",
    "db:seed": "npm run seed"
  },
