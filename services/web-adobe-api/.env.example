# ============================================
# = Web-Adobe FastAPI Service - Environment Configuration
# ============================================

# Application Settings
APP_NAME="Web Adobe Backend"
ENVIRONMENT=development
DEBUG=true

# API Configuration
API_PREFIX=/api
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173","https://glxy.at"]

# Storage Paths
STORAGE_DIR=var/storage
UPLOAD_DIR=var/uploads

# Database
DATABASE_URL=sqlite:///./var/web_adobe.db
# For PostgreSQL integration with main GLXY DB:
# DATABASE_URL=postgresql://glxy_admin:password@db:5432/glxy_gaming?schema=public

# Redis
REDIS_URL=redis://redis:6379/1

# Celery (Background Tasks)
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/1

# AI Provider (Optional - for AI-assisted field detection)
AI_PROVIDER=openai
AI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-4

# DataPad Integration (Optional)
DATAPAD_BASE_URL=https://api.datapad.local
DATAPAD_API_KEY=your_datapad_api_key_here
